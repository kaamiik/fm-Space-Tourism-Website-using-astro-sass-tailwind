<div
  class="tab-list | number-indicators flex gap-200 lg:flex-col lg:items-start lg:gap-400"
  role="tablist"
>
  <button
    class="tab | font-serif fs-600 text-neutral-100"
    type="button"
    role="tab"
    aria-selected="true"><span class="sr-only">SLIDE</span>1</button
  >
  <button
    class="tab | font-serif fs-600 text-neutral-100"
    type="button"
    role="tab"
    aria-selected="false"><span class="sr-only">SLIDE</span>2</button
  >
  <button
    class="tab | font-serif fs-600 text-neutral-100"
    type="button"
    role="tab"
    aria-selected="false"><span class="sr-only">SLIDE</span>3</button
  >
</div>

<style lang="scss">
  @use "../styles/abstracts/" as *;

  .number-indicators > * {
    display: grid;
    place-content: center;
    border-radius: 100vh;
    border: 1px solid hsla(0, 0%, 100%, 0.25);
    padding: 1.25em 0;
    aspect-ratio: 1;

    &:is(:hover, :focus) {
      border: 1px solid $color-neutral-100;
    }
  }

  .number-indicators > [aria-selected="true"] {
    border: 1px solid $color-neutral-100;
    background-color: $color-neutral-100;
    color: $color-neutral-900;
  }
</style>
