<button
  class="mobile-nav-toggle js-mobile-nav-toggle"
  aria-controls="primary-navigation"
  aria-expanded="false"
  ><span class="sr-only">MENU</span>
  <img
    class="js-nav-toggle-img"
    src="/assets/images/shared/icon-hamburger.svg"
    alt=""
    width="28"
  />
</button>
<nav class="nav" aria-label="primary navigation">
  <ul
    id="primary-navigation"
    class="nav__items | js-primary-navigation flex-group underline-indicators"
    data-visible="false"
  >
    <li class="nav__item js-nav-item">
      <a class="nav__link js-nav-link" href="/index.html"
        ><span class="nav__number" aria-hidden="true">00</span>Home</a
      >
    </li>
    <li class="nav__item js-nav-item">
      <a class="nav__link js-nav-link" href="/destination.html"
        ><span class="nav__number" aria-hidden="true">01</span>Destination</a
      >
    </li>
    <li class="nav__item js-nav-item">
      <a class="nav__link js-nav-link" href="/crew.html"
        ><span class="nav__number" aria-hidden="true">02</span>Crew</a
      >
    </li>
    <li class="nav__item js-nav-item">
      <a class="nav__link js-nav-link" href="/technology.html"
        ><span class="nav__number" aria-hidden="true">03</span>Technology</a
      >
    </li>
  </ul>
</nav>

<style lang="scss">
  @use "../styles/abstracts" as *;
  .mobile-nav-toggle {
    display: none;

    @media (max-width: 47.99em) {
      display: block;
      position: absolute;
      z-index: 2000;
      right: 1.5rem;
      top: 2rem;
      &:focus-visible {
        outline: 5px double $color-neutral-100;
        outline-offset: 5px;
      }
    }
  }

  .nav {
    order: 2;
    &__items {
      margin-left: auto;
      --flex-gap: #{$navigation-gap};
      list-style: none;
      font-family: $navigation-font-family;
      font-weight: $navigation-font-weight;
      text-transform: uppercase;
      letter-spacing: $letter-spacing-1;
      background: hsla(0, 0%, 100%, 0.05);
      backdrop-filter: blur(80px);
      @media (max-width: 47.99em) {
        --flex-gap: #{$navigation-gap-hamburger};
        flex-direction: column;
        padding: min(20rem, 15vh) $size-8;
        padding-right: 0;
        position: fixed;
        inset: 0 0 0 32%;
        z-index: 1000;
        transform: translateX(100%);
        transition: transform 500ms ease-in-out;
        & .active {
          border: 0;
          border-right: 3px solid $color-neutral-100;
        }

        &[data-visible="true"] {
          transform: translateX(0);
        }
      }

      @include mq(medium) {
        padding-inline: $size-20 $size-10;
      }

      @include mq(large) {
        margin-top: $size-10;
        padding-inline: $size-24 $size-16;
      }
    }

    &__item {
      padding: 2em 0;

      @media (max-width: 47.99em) {
        padding: 0;
      }

      @include mq(medium) {
        &:has(.nav__link:focus-visible) {
          border-bottom: 3px solid hsla(0, 0%, 100%, 0.5);
        }
      }
    }

    &__link {
      display: flex;
      gap: $size-3;
      align-items: center;
      color: $navigation-color;
      text-decoration: $navigation-link-text-decoration;

      &:focus-visible {
        outline: 5px double $color-neutral-300;
        outline-offset: 5px;
      }

      @media (max-width: 47.99em) {
        width: fit-content;
      }
    }

    &__number {
      font-weight: 700;
    }
  }
</style>
